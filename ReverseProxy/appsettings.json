{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "adminRoute": {
        "ClusterId": "adminCluster",
        "Match": {
          "Path": "/api/admin/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/admin" }
        ]
      },
      "consumerRoute": {
        "ClusterId": "consumerCluster",
        "Match": {
          "Path": "/api/consumer/{**catch-all}",
          "DisableRequestHandlingBuffering": true,
          "DisableResponseBuffering": true
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/consumer" }
        ]
      },
      "providerRoute": {
        "ClusterId": "providerCluster",
        "Match": {
          "Path": "/api/provider/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/provider" }
        ]
      }
    },
    "Clusters": {
      "adminCluster": {
        "Destinations": {
          "adminDestination": {
            "Address": "http://adminservice:8080"
          }
        },
        "HttpClient": {
          "MaxResponseContentBufferSize": 52428800
        }
      },
      "consumerCluster": {
        "Destinations": {
          "consumerDestination": {
            "Address": "http://consumerservice:8080"
          }
        },
        "HttpClient": {
          "MaxResponseContentBufferSize": 52428800,
          "Timeout": "00:05:00",
          "DangerousAcceptAnyServerCertificate": true
        },
        "HttpRequest": {
          "Version": "1.1",
          "AllowResponseBuffering": false
        }
      },
      "providerCluster": {
        "Destinations": {
          "providerDestination": {
            "Address": "http://providerservice:8080"
          }
        },
        "HttpClient": {
          "MaxResponseContentBufferSize": 52428800,
          "Timeout": "00:05:00",
          "DangerousAcceptAnyServerCertificate": true
        }
      }
    }
  },
  "AllowedHosts": "*"
}
